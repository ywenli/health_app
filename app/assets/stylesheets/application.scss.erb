@import "bootstrap";

/* mixins, variables, etc. */

@mixin box_sizing {
  -moz-box-sizing:    border-box;
  -webkit-box-sizing: border-box;
  box-sizing:         border-box;
}

/* univeral */


/* header */

.navbar-extend {
  margin-bottom: 0;
  background-color: white;
  ul li a button {
    padding: 0rem 1.1em;
  }
  li {
    list-style-type: none;
  }
}

.logo-img-text {
  float: left;
  &:hover {
    opacity: 0.6;
  }
}

.btn-extend {
  width: auto;
}

.nav-item-extend {
  a:not(.btn-extend) {
    // text-decoration: none;
    &:hover {
      opacity: 0.6;
    }
  }
  a {
    margin-left: 1rem;
    float: right;
  }
}

/* jumbotron */

.jumbotron-extend {
  background-image: url(<%= asset_path "sunbeams.jpg" %>);
  background-size: cover;
  background-repeat: no-repeat;
  .container {
    margin-top: 6rem;
    h1, p {
      margin-bottom: 0.75rem;
    }
    h1 {
      margin-bottom: 1.5rem;
    }
  }
}

/* discription */

.discription-container {
  margin: 3rem 0;
  padding: 3rem 1rem;
  h2 {
    font-size: 1.5rem;
    text-align: center;
    margin-bottom: 1.8rem;
  }
  p {
    font-size: 1rem;
  }
}

.discription-img-container {
  margin-bottom: 3rem;
  text-align: center;
}

.discription-img {
  width: 10rem;
}


/* footer */

footer {
  margin-top: 45px;
  padding-top: 5px;
  border-top: 1px solid;
  ul {
    float: right;
    list-style: none;
    li {
      float: left;
      margin-left: 15px;
    }
  }
}

/* miscellaneous */

.debug_dump {
  clear: both;
  float: left;
  width: 100%;
  margin-top: 45px;
  @include box_sizing;
}

// signup

.signup-container {
  width: 100%;
  max-width: 330px;
  margin-top: 10rem;
  padding-top: 1rem !important;
}

.signup-logo-img {
  text-align: center;
}

.signup-title {
  text-align: center;
  font-weight: normal;
  font-size: 1.5rem;
  margin-top: 0.8rem;
  margin-bottom: 2rem;
}

.form-group {
  text-align: center;
}

.form-control {
  text-align: center;
  width: 100%
}

.form-submit {
  width: 100%;
  margin-top: 1rem;
}

#error_explanation {
  color: red;
  ul {
    color: red;
    padding-bottom: 0;
  }
}

.field_with_errors .form-control {
  border-color: red;
}

.alert-form-extend {
  margin: 1.5rem 0 1rem;
}
